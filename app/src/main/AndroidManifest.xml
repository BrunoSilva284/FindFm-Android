<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fatec.tcc.findfm">

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".Controller.FindFM"
        android:allowBackup="true"
        android:icon="@drawable/favicon2"
        android:label="@string/app_name"
        android:roundIcon="@drawable/favicon2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".Views.Login"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Views.HomePage"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".Views.Registrar"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".Views.RegistrarMusico"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".Views.RegistrarBanda"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".Views.RegistrarContratante" />
        <activity
            android:name=".Views.MenuLateral"
            android:label="@string/title_activity_home__page"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>